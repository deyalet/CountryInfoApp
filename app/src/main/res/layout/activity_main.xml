<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnotro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E8888"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btabrirgaleria"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20sp"
        android:text="Abrir Galeria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <ImageView
        android:id="@+id/idimagen"
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="166dp"
        android:background="#77D0DC"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/idnombreimagen"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="20sp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="20sp"
        android:text="Nombre del país"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnprocesar"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="645dp"
        android:layout_marginEnd="217dp"
        android:text="Procesar" />

    <Button
        android:id="@+id/btnVerDatos"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="646dp"
        android:layout_marginEnd="17dp"
        android:onClick="cargarImagen"
        android:text="Ver" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="88dp"
        android:text="Nombre del país"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>